<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
       android:id="@+id/textview_content"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="18dp"
       android:layout_gravity="center_horizontal"
       android:textColor="#000000"/>
   
   <ImageView
       android:id="@+id/image_content"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:visibility="visible"
       />
   
   <RelativeLayout
       android:id="@+id/layout_file"
       android:layout_width="120dp"
       android:layout_height="40dp"
       android:visibility="visible" >
	   <ImageView
	       android:id="@+id/image_file"
	       android:layout_width="45dp"
	       android:layout_height="45dp"
	       android:scaleType="centerCrop"
	       android:src="@drawable/ic_launcher"/>
	   <TextView
	       android:id="@+id/textview_file"
	       android:layout_width="75dp"
	       android:layout_height="wrap_content"
	       android:singleLine="true"
	       android:ellipsize="middle"
	       android:layout_marginTop="3dp"
	       android:layout_toRightOf="@id/image_file"
	       android:layout_marginLeft="5dp"
	       android:textSize="12sp"
	       android:textColor="#000000"
	       />
	   <TextView
	       android:id="@+id/textview_size"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content" 
	       android:text="0.0B"
	       android:layout_marginTop="2dp"
	       android:layout_toRightOf="@id/image_file"
	       android:layout_below="@id/textview_file"
	       android:layout_marginLeft="5dp"
	       android:textSize="12sp"
	       android:textColor="#000000"
	       />
   </RelativeLayout>
   
   <RelativeLayout
       android:id="@+id/layout_video" 
       android:layout_width="120dp"
       android:layout_height="110dp"
       android:visibility="visible" >
       <ImageView
	       android:id="@+id/image_video"
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"
	       android:scaleType="centerCrop"
	       android:layout_marginBottom="16dp"/>
       <View
           android:id="@+id/view_video" 
           android:layout_width="38dp"
       	   android:layout_height="38dp"
       	   android:layout_centerHorizontal="true"
       	   
           android:layout_marginTop="30dp"/>
       <TextView
           android:id="@+id/textview_video"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="10dp"
           android:layout_alignParentBottom="true"
           android:textColor="#000000"
           android:layout_alignParentRight="true"
           android:text="00:00" 
           />
    </RelativeLayout>
    
    
     <TextView
       android:id="@+id/view_baffle"
       android:layout_width="120dp"
       android:layout_height="40dp" 
       android:textSize="14sp"
       android:gravity="center"
       android:textColor="#FFFFFF"
       android:background="#88000000"
       android:visibility="visible"
       />
   
</FrameLayout>