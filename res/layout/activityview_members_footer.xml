<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/background_color"
    android:paddingTop="10dp"
    android:paddingBottom="170dp"
    >
    
    <Button 
        android:id="@+id/addMyMobile"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/card_view_btn"
        android:text="我要报名"
        android:textColor="@color/white"
        android:onClick="ButtonClick"
        android:visibility="gone"
        />

    <RelativeLayout 
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button 
	        android:id="@+id/shareWechat"
	        android:layout_width="139dp"
	        android:layout_height="44dp"
	        android:layout_marginLeft="16dp"
	        android:background="@drawable/card_view_btn"
	        android:text="推荐给好友"
        	android:textColor="@color/white"
       	 	android:onClick="ButtonClick"
        />
    	<Button 
    	    
	       android:id="@+id/shareTimeline"
	       android:layout_width="139dp"
	       android:layout_height="44dp"
	       android:layout_marginRight="16dp"
	       android:layout_alignParentRight="true"
	       android:background="@drawable/card_view_btn"
	       android:text="发到朋友圈"
        	android:textColor="@color/white"
        	android:onClick="ButtonClick"
        />
    </RelativeLayout>
    
    <Button 
        android:layout_marginTop="10dp"
        android:id="@+id/editMyMobile"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/card_view_btn"
        android:text="修改我的名片"
        android:textColor="@color/white"
        android:onClick="ButtonClick"
         android:visibility="gone"
        />
    
    <LinearLayout 
        android:id="@+id/adminView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <TextView 
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发起人管理菜单"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginLeft="7dp"
        />
    
    <Button 
        android:layout_marginTop="10dp"
        android:id="@+id/editActivityView"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/card_view_btn"
        android:text="编辑聚会信息"
        	android:textColor="@color/white"
        	android:onClick="ButtonClick"
        />
    <Button 
        android:layout_marginTop="10dp"
        android:id="@+id/deleteActivityView"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/card_view_btn"
        android:text="移除聚会"
       	android:textColor="@color/white"
       	android:onClick="ButtonClick"
        />
    </LinearLayout>
</LinearLayout>
