<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:background="@color/nav_color"
        >
        <Button
            android:id="@+id/leftBarButton"
            android:layout_width="90dp"
            android:layout_height="44dp"
            android:drawableLeft="@drawable/btn_message_normal"
            android:background="@null"
            android:layout_centerVertical="true"
            android:text="消息"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_button_text_size"
            android:drawablePadding="-5dp"
            android:paddingLeft="12dp"
            android:onClick="ButtonClick"
            />
        
        <TextView
            android:id="@+id/messageView"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/message_count_size"
            android:minWidth="15dp"
            android:background="@drawable/message_label"
            android:gravity="center"
            android:visibility="invisible"
            />
        
        <TextView 
            android:id="@+id/barTitleTV"
            android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
            android:text="群友通讯录"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_title_size"
            />
        
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/xindicator"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_toRightOf="@+id/barTitleTV"
            android:layout_marginLeft="8dp"
            android:visibility="invisible"
            android:background="@drawable/round_1"/>
        
        <Button
            android:id="@+id/rightBarButton"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:drawableLeft="@drawable/btn_add_normal"
            android:background="@null"
            android:layout_centerVertical="true"
            android:text="创建"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_button_text_size"
           	android:layout_alignParentRight="true"
			android:paddingRight="12dp"
			android:drawablePadding="8dp"
			android:onClick="ButtonClick"
            />
    </RelativeLayout>
	
    <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            >
        	<Button 
        	    android:id="@+id/phoneButton"
        	    android:layout_width="0dp"
				android:layout_height="44dp"
				android:layout_weight="1.0"
				android:text="通讯录"
				android:background="@drawable/friendcard_button"
				android:textColor="@color/friendcard_button_textcolor"
				android:onClick="ButtonClick"
				android:textSize="@dimen/navbar_button_text_size"
        	    />
        	<Button 
        	    android:id="@+id/activityButton"
        	    android:layout_width="0dp"
				android:layout_height="44dp"
				android:layout_weight="1.0"
				android:text="发现"
				android:background="@drawable/friendcard_button"
				android:textColor="@color/friendcard_button_textcolor"
				android:onClick="ButtonClick"
				android:textSize="@dimen/navbar_button_text_size"
        	    />
        	<Button 
        	    android:id="@+id/cardButton"
        	    android:layout_width="0dp"
        	    android:layout_weight="1.0"
				android:layout_height="44dp"
				android:text="名片"
				android:background="@drawable/friendcard_button"
				android:textColor="@color/friendcard_button_textcolor"
				android:onClick="ButtonClick"
				android:textSize="@dimen/navbar_button_text_size"
        	    />
    </LinearLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
	
    <WebView 
	       	android:id="@+id/webview"
	       	android:layout_width="match_parent"
	      	android:layout_height="match_parent"
	      	android:visibility="invisible"
	      	/>
</LinearLayout>
