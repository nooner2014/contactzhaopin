<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white" >
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        >
        <ImageView 
        android:id="@+id/isSelectedImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
       	android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/friend_not_select"
        />
        
        <ImageView 
            android:layout_toRightOf="@+id/isSelectedImageView"
        android:id="@+id/avatarImageView"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="14dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_launcher"
        />
    
    <TextView 
        android:id="@+id/title"
        android:layout_toRightOf="@+id/avatarImageView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="14dp"
        android:textSize="@dimen/cell_title_size"
        android:textColor="#2b2b2b"
        android:text=""
        />
    
    <TextView 
        android:id="@+id/role"
        android:layout_toRightOf="@+id/title"
        android:layout_alignTop="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/cell_subtitle_size"
        android:textColor="#999999"
        android:text=""
        android:gravity="center_vertical"
        />
    
    <TextView 
        android:id="@+id/des"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/cell_subtitle_size"
        android:textColor="#999999"
        android:text=""
        />
    
    <TextView 
        android:id="@+id/mobile"
        android:layout_below="@+id/des"
        android:layout_alignLeft="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/cell_subtitle_size"
        android:textColor="#999999"
        android:visibility="gone"
        />
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#e4e4e4"
        />
	
</LinearLayout>
